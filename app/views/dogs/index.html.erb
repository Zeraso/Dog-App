<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3),rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1546421845-6471bdcf3edf?ixlib=rb-1.2.1);">
  <div class="container">
    <h1>Find their perfect <strong>match</strong>!</h1>
    <p>Change your life and learn to code at one of our campuses around the world.</p>
      <%= simple_form_for :search, url: root_path, method: :get do |f| %>
        <div class="search-form-control form-group">
          <input class="form-control string required" type="text" name="search[query]" id="search_query" />
          <button name="button" type="submit" class="btn btn-primary">
          <i class="fas fa-search"></i> Search
          </button>
        </div>
      <% end %>
  </div>
</div>


<% @dogs.each do |dog| %>
<%= link_to dog.name, dog_path(dog) %>
<% end %>

<div class="container shadow-sm p-3 pb-5 mb-5 bg-white rounded">
  <div class="row">
      <div class="col-sm-3 py-3">
        <div class="card-dog">
        <% @dogs.each do |dog| %>
          <img src="https://images.unsplash.com/photo-1517423440428-a5a00ad493e8?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1587&q=80" class= "img-fluid"/>
            <div class="card-dog-infos">
              <div>
                <h2><%= dog.name %></h2>
                <p><%= dog.breed %></p>
              </div>
                <!-- <h2 class="card-dog-gender">Female</h2> -->
                <h2 class= "card-dog-gender fas fa-venus"></h2>
                <!-- <p class= "fas fa-paw"></p> -->
            </div>
        </div>
      <% end %>
    </div>
  </div>
</div>


