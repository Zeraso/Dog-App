<h1>You chose <%= @dog.name %></h1>
  <ul>
    <li>Name: <%= @dog.name %></li>
    <li>Birthday: <%= @dog.birthday %></li>
    <li>Gender: <%= @dog.gender %></li>
    <li>Breed <%= @dog.breed %></li>
    <li>Coat <%= @dog.coat %></li>
  </ul>


<%= link_to "go back to homepage", dogs_path %>
  <% if policy(@dog).edit? %>
    <%= link_to "Update", edit_dog_path(@dog) %>
  <% end %>
