<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="navbar-container">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "logo.png" %>
      <h2> <%= link_to("SugarDoggy", root_path, class: "brand") %> </h2>
    <% end %>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
  </div>

  <div>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <div class="nav-align-content">
        <ul class="navbar-nav mr-auto">
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to(' Add your puppy', new_dog_path, class: "fas fa-dog") %>
            </li>
            <li class="nav-item">
              <%= link_to "", "#" , class: "fas fa-envelope"%>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to('Sign Up', new_registration_path(resource_name)) %>
            </li>
            <li class="nav-item">
              <%= link_to('Sign In', user_session_path) %>
            </li>
          <% end %>

          <li class="nav-item dropdown">
            <% if user_signed_in? %>
              <%= image_tag "https://affiliation.manomano.fr/wp-content/uploads/2019/04/2-1.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                <% if current_user.dogs.count == 0 %>
                  <%= link_to("Add a Puppy", new_dog_path, class: "dropdown-item") %>
                <% else %>
                  <%= link_to "My Puppies", my_dogs_path, class: "dropdown-item" %>
                <% end %>
                  <%= link_to "Your Meetings", meetings_path, class: "dropdown-item" %>
                  <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: "dropdown-item" %>
              </div>
            <% else %>
              <%= image_tag "https://image.shutterstock.com/image-vector/avatar-male-profile-gray-person-260nw-538708681.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
