<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="navbar-container">
    <%= link_to "#", class: "navbar-brand" do %>
      <%= image_tag "Logo.png" %>
    <% end %>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <%= simple_form_for :search, url: root_path, method: :get, html: { class: "form-inline" } do |f| %>   <input class="form-control string required" type="text" name="search[query]" id="search_query" />
      <button name="button" type="submit" class="btn btn-danger">
        <i class="fas fa-search"></i>
      </button>
    <% end %>
  </div>

  <div>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
          </li>
          <li class="nav-item">
            <%= link_to "Messages", "#" %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to('Sign in', new_user_session_path) %>
          </li>
        <% end %>
        
        <li class="nav-item dropdown">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Settings", "#", class: "dropdown-item" %>
            <%= link_to "Your match", "#", class: "dropdown-item" %>
          </div>
        </li>
      </ul>
    </div>
  </div>
</div>
