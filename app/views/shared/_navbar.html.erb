<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="navbar-container">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "logo.png" %>
      <h2>SugarDoggy</h2>
    <% end %>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <%= simple_form_for :search, url: root_path, method: :get, html: { class: "form-inline" } do |f| %>   <input class="form-control string required" type="text" name="search[query]" id="search_query" />
      <button name="button" type="submit" class="btn btn-danger">
        <i class="fas fa-search"></i>
      </button>
    <% end %>
  </div>

  <div>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <div class="nav-align-content">
      <ul class="navbar-nav mr-auto">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to('+ ', new_dog_path, class: "fas fa-dog") %>
          </li>
          <li class="nav-item">
            <%= link_to "", "#" , class: "fas fa-envelope"%>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to('Sign Up', new_registration_path(resource_name)) %>
          </li>
          <li class="nav-item">
            <%= link_to('Sign In', user_session_path) %>
          </li>
        <% end %>

        <li class="nav-item dropdown">
          <% if user_signed_in? %>
            <%= image_tag "https://affiliation.manomano.fr/wp-content/uploads/2019/04/2-1.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Your Meetings", meetings_path, class: "dropdown-item" %>
              <%= link_to "Edit Account", edit_user_registration_path, class: "dropdown-item" %>
              <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          <% else %>
            <%= image_tag "https://image.shutterstock.com/image-vector/avatar-male-profile-gray-person-260nw-538708681.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>
          </div>
        </li>
      </ul>

      </div>
    </div>
  </div>
</div>
